//- Close icon to you for menu button
//- -----------------------------------------------------------------

//- If svg is purely decorative, include aria-hidden='true', otherwise:
//- include aria-labelledby='title-id' in the svg
//- A <title> tag with id='title-id'
//- A <desc> tag

//- ------------------------------------

mixin svg_menu--close(titleId, title, desc)
	//- If there's no title args, then it's just meant as decoration and should be hidden from screen-readers
	unless titleId
		- var ariaHidden = 'true';

	//- Give it a default title and description
	unless title
		- var title = 'Close Menu';
	unless desc
		- var desc = 'Simple vector image of an X.';

	//- ----------------

	svg(aria-labelledby=titleId, aria-hidden=ariaHidden, focusable='false', data-prefix='fal', data-icon='times', role='img', xmlns='http://www.w3.org/2000/svg', viewbox='0 0 320 512')

		if titleId
			title(id=titleId)=title
			desc=desc

