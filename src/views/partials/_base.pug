//- Contains the html that is reused on most pages
//- -----------------------------------------------------------------

doctype html
html.no-js(lang='en')

	//- Page Variables
	block vars
		- var metaDescription = SITE.meta.description;
		- var metaKeywords = SITE.meta.keywords;
		- var bodyClass = '';

	//- Site Head
	block head
		head
			meta(charset='utf-8')
			meta(http-equiv='x-ua-compatible', content='ie=edge')
			meta(name='viewport', content='width=device-width,initial-scale=1')
			meta(name='description', content=metaDescription)
			meta(name='keywords', content=metaKeywords)


			//- Site/Page Meta Title
			block title
				title #{SITE.meta.title}


			include _meta-imgs


			//- Stylesheets
			// build:css /css/main.min.css
			block styles
				link(rel='stylesheet', href='/css/main.css')
			// endbuild
			//


	//- If there's no template class in the page, then use the default
	unless templateClass
		- var templateClass = 'l_template--defualt';

	//- make sure there's a space between body and template classes
	if bodyClass
		- var bodyClass = ' ' + bodyClass;

	body(class=templateClass + bodyClass)

		//- -----------------------------------
		//- Accessibility Skiplink
		//- -----------------------------------
		a.c-skiplink(href='#nav-main') Jump to main content.

		//- -----------------------------------
		//- Site Header/Nav
		//- -----------------------------------
		block header
			include _header

		main#nav-main(role='main')

			//- -----------------------------------
			//- Page Content
			//- -----------------------------------
			block content

		//- -----------------------------------
		//- Site Footer
		//- -----------------------------------
		block footer
			include _footer

		//- -----------------------------------
		//- Scripts
		//- -----------------------------------
		block bottom-scripts-link
			<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script><script>window.jQuery || document.write('<script src="js/jquery.min.js"><\/script>')</script>

		// build:js /js/main.min.js
		block bottom-scripts-local
			script(src='/js/nav.js')
		// endbuild
		//
